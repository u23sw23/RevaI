<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.demo.mapper.UserMapper">
    
    <resultMap id="UserResultMap" type="com.example.demo.entity.User">
        <id property="id" column="id"/>
        <result property="username" column="username"/>
        <result property="password" column="password"/>
        <result property="email" column="email"/>
        <result property="bio" column="bio"/>
        <result property="avatar" column="avatar"/>
        <result property="createTime" column="create_time"/>
        <result property="updateTime" column="update_time"/>
    </resultMap>
    
    <select id="findById" resultMap="UserResultMap">
        SELECT * FROM users WHERE id = #{id}
    </select>
    
    <select id="findByUsername" resultMap="UserResultMap">
        SELECT * FROM users WHERE username = #{username}
    </select>
    
    <select id="searchByKeyword" resultMap="UserResultMap">
        SELECT * FROM users 
        WHERE username LIKE CONCAT('%', #{keyword}, '%')
        LIMIT 20
    </select>
    
    <insert id="insert" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO users (username, password, email, bio, avatar, create_time, update_time)
        VALUES (#{username}, #{password}, #{email}, #{bio}, #{avatar}, #{createTime}, #{updateTime})
    </insert>
    
    <update id="update">
        UPDATE users
        SET username = #{username},
            email = #{email},
            bio = #{bio},
            avatar = #{avatar},
            update_time = #{updateTime}
        WHERE id = #{id}
    </update>
    
    <select id="countSubjectsByUserId" resultType="int">
        SELECT COUNT(*) FROM subjects WHERE user_id = #{userId}
    </select>
    
    <select id="countGroupsByUserId" resultType="int">
        SELECT COUNT(*) FROM group_members WHERE user_id = #{userId}
    </select>
</mapper>

