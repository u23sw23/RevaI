<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.demo.mapper.NoteMapper">
    
    <resultMap id="NoteResultMap" type="com.example.demo.entity.Note">
        <id property="id" column="id"/>
        <result property="title" column="title"/>
        <result property="content" column="content"/>
        <result property="subjectId" column="subject_id"/>
        <result property="userId" column="user_id"/>
        <result property="createTime" column="create_time"/>
        <result property="updateTime" column="update_time"/>
    </resultMap>
    
    <select id="findBySubjectId" resultMap="NoteResultMap">
        SELECT * FROM notes WHERE subject_id = #{subjectId} ORDER BY update_time DESC
    </select>
    
    <select id="findById" resultMap="NoteResultMap">
        SELECT * FROM notes WHERE id = #{id}
    </select>
    
    <insert id="insert" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO notes (title, content, subject_id, user_id, create_time, update_time)
        VALUES (#{title}, #{content}, #{subjectId}, #{userId}, #{createTime}, #{updateTime})
    </insert>
    
    <update id="update">
        UPDATE notes
        SET title = #{title},
            content = #{content},
            update_time = #{updateTime}
        WHERE id = #{id}
    </update>
    
    <delete id="delete">
        DELETE FROM notes WHERE id = #{id}
    </delete>
    
    <delete id="deleteBySubjectId">
        DELETE FROM notes WHERE subject_id = #{subjectId}
    </delete>
</mapper>

