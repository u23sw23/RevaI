<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.demo.mapper.SubjectMapper">
    
    <resultMap id="SubjectResultMap" type="com.example.demo.entity.Subject">
        <id property="id" column="id"/>
        <result property="name" column="name"/>
        <result property="description" column="description"/>
        <result property="userId" column="user_id"/>
        <result property="visibility" column="visibility"/>
        <result property="createTime" column="create_time"/>
        <result property="updateTime" column="update_time"/>
    </resultMap>
    
    <select id="findAllByUserId" resultMap="SubjectResultMap">
        SELECT * FROM subjects WHERE user_id = #{userId} ORDER BY update_time DESC
    </select>
    
    <resultMap id="SubjectWithCreatorResultMap" type="com.example.demo.entity.Subject">
        <id property="id" column="id"/>
        <result property="name" column="name"/>
        <result property="description" column="description"/>
        <result property="userId" column="user_id"/>
        <result property="visibility" column="visibility"/>
        <result property="createTime" column="create_time"/>
        <result property="updateTime" column="update_time"/>
        <result property="creatorUsername" column="creator_username"/>
    </resultMap>
    
    <select id="findAllPublic" resultMap="SubjectWithCreatorResultMap">
        SELECT s.*, u.username as creator_username
        FROM subjects s
        INNER JOIN users u ON s.user_id = u.id
        WHERE s.visibility = 'public'
        ORDER BY s.update_time DESC
    </select>
    
    <select id="findById" resultMap="SubjectResultMap">
        SELECT * FROM subjects WHERE id = #{id}
    </select>
    
    <insert id="insert" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO subjects (name, description, user_id, visibility, create_time, update_time)
        VALUES (#{name}, #{description}, #{userId}, #{visibility}, #{createTime}, #{updateTime})
    </insert>
    
    <update id="update">
        UPDATE subjects
        SET name = #{name},
            description = #{description},
            visibility = #{visibility},
            update_time = #{updateTime}
        WHERE id = #{id}
    </update>
    
    <delete id="delete">
        DELETE FROM subjects WHERE id = #{id}
    </delete>
</mapper>

